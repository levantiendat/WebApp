<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HỆ THỐNG ĐĂNG KÍ TÍN CHỈ TRƯỜNG ĐẠI HỌC BÁCH KHOA - ĐẠI HỌC ĐÀ NẴNG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_example1.styles.css" asp-append-version="true" />
</head>
<body>
    @if (IsSectionDefined("Header"))
    {
        <header>
            @RenderSection("Header")
        </header>
    }
    else{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="background-color:mediumblue">
                <b class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:white">WEBSITE ĐĂNG KÍ HỌC - TRƯỜNG ĐẠI HỌC BÁCH KHOA - ĐẠI HỌC ĐÀ NẴNG</b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <form style="margin-right" action ="~/Home/CheckingAccount">
                    <a style="color:white">Số thẻ SV:</a>
                    <input type="text" name="MSSV">
                    <a style="color:white">Mật khẩu:</a>
                    <input type="password" name="Password">
                    <input type="submit" name="OK" value="Đăng nhập">
                </form>
            </div>
        </nav>
    </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
